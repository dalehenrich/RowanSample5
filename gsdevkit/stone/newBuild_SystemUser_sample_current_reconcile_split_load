#
#	load application using Rowan into a stone where the application already exists
#
#

set -e
. defStone.env
export vers="3.2.15"

rm -rf *.log *.out

newExtent -s product/bin/extent0.dbf $GEMSTONE_NAME

$GS_HOME/shared/repos/Rowan/platforms/gemstone/topaz/3.2.15/installRowan $GEMSTONE_NAME

startTopaz $GEMSTONE_NAME -l << EOF

  iferr 1 stk
  iferr 2 stack
  iferr 3 exit

# set up structure for the "original application"
  set user SystemUser p swordfish
  login

run
  UserGlobals
    at: #'RowanSample5_Spec_Url'
    put: 'file:$ROWAN_PROJECTS_HOME/RowanSample5/specs/RowanSample5_current.ston'
%
commit

  input $ROWAN_PROJECTS_HOME/RowanSample5/topaz/defineGlobals.gs
  input $ROWAN_PROJECTS_HOME/RowanSample5/topaz/createUsers.gs
  input $ROWAN_PROJECTS_HOME/RowanSample5/topaz/createSymbolDictionaries_client.gs

  logout

# install the Users group for "original application"
  set user RowanSample5_UserCurator p swordfish
  login

run
  UserGlobals
    at: #'RowanSample5_Spec_Url'
    put: 'file:$ROWAN_PROJECTS_HOME/RowanSample5/specs/RowanSample5_current_Users.ston'
%
commit

  input $ROWAN_PROJECTS_HOME/RowanSample5/topaz/loadProject.gs

  logout

# install the Globals group for "original application"
  set user RowanSample5_GlobalsCurator p swordfish
  login

run
  UserGlobals
    at: #'RowanSample5_Spec_Url'
    put: 'file:$ROWAN_PROJECTS_HOME/RowanSample5/specs/RowanSample5_current_Globals.ston'
%
commit

  input $ROWAN_PROJECTS_HOME/RowanSample5/topaz/loadProject.gs

  logout

# disown the Rowan project structure for the "original application"
  set user SystemUser p swordfish
  login

  input $ROWAN_PROJECTS_HOME/RowanSample5/topaz/disown_current.gs

  logout

# adopt and create symbol dictionaries for the new application structure
  set user RowanSample5_GlobalsCurator p swordfish
  login

run
  UserGlobals
    at: #'RowanSample5_Spec_Url'
    put: 'file:$ROWAN_PROJECTS_HOME/RowanSample5/specs/RowanSample5_reconcile_Application.ston'
%
commit

  input $ROWAN_PROJECTS_HOME/RowanSample5/topaz/adopt_client_v5.gs
  input $ROWAN_PROJECTS_HOME/RowanSample5/topaz/createSymbolDictionaries_monolithic.gs

  logout

# Install the non-Globals application code
  set user RowanSample5_UserCurator p swordfish
  login

run
  UserGlobals
    at: #'RowanSample5_Spec_Url'
    put: 'file:$ROWAN_PROJECTS_HOME/RowanSample5/specs/RowanSample5_reconcile_Users.ston'
%
commit

  input $ROWAN_PROJECTS_HOME/RowanSample5/topaz/loadProject_client.gs
  input $ROWAN_PROJECTS_HOME/RowanSample5/topaz/disown_staging.gs

  logout

# install the extensions to Globals classes
  set user RowanSample5_GlobalsCurator p swordfish
  login

run
  UserGlobals
    at: #'RowanSample5_Spec_Url'
    put: 'file:$ROWAN_PROJECTS_HOME/RowanSample5/specs/RowanSample5_reconcile_Globals.ston'
%
commit

  input $ROWAN_PROJECTS_HOME/RowanSample5/topaz/loadProject_client.gs
  input $ROWAN_PROJECTS_HOME/RowanSample5/topaz/disown_staging.gs

  exit
EOF
